<h3><%= "#{@user.username}" %></h3>
<div>
  <div class='row'>
    <div class= 'span5 small well well'>
      <h5>Email Address </h5>
      <%= @user.email %>
    </div>
    <div class= 'span5 small well well'>
      <h5>Time Zone</h5>
      <%= @user.time_zone %>
    </div>
  </div>

  <div>
    <% @user.posts.each do |post| %>
    <div class='span8 well well-small'>
      <%= link_to post.title, post_path(post) %> (<%= link_to "edit", edit_post_path(post)%>)
         posted on <%= pretty_time(post.created_at) %></small><br>
          <div ><%= link_to "Comments", post_path(post) %> (<%= post.comments.size %>)</div>
    </div>
    <% end %>
  </div>
  <div>
    <div class='span8 well well-small'>  
      <% @user.comments.each do |comment| %>
        <%= comment.body %>
      <% end %>
    </div>
  </div>
</div>



<%= form_for @user do |f| %>
  <%= render 'shared/errors', obj: @user %>
<div class='well'>
  <div class='control-group'>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  
  <div class='control-group'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class='control-group'>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class='control-group'>
    <%= f.label :time_zone %>
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: (default_time_zone) %>
  </div>
    <%= f.submit @user.new_record? ? "Register" : "Update Profile", class: "btn btn-primary" %>
  </div>
<% end %>

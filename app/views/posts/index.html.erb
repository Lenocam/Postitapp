<h3>Welcome!</h3>


<dl>
  <% @post.each do |post| %>
    <div class="well well-small">
      <dt>
        <%= link_to post.title, post_path(post) %> (<%= link_to "edit", edit_post_path(post)%>)</dt>

      <dd>Post by <%= post.user.username if post.user %> on <%= pretty_time(post.created_at) %></dd>
        <%= link_to "Comments", post_path(post) %> (<%= post.comments.size %>)
      <br/> 
    </div>
  <% end %> 
</dl>




